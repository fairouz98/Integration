{% extends 'backend/logistique/index.html.twig' %}
{% block content %}
    <h1>Ligne</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ ligne.id }}</td>
            </tr>
            <tr>
                <th>Depart</th>
                <td>{{ ligne.depart }}</td>
            </tr>
